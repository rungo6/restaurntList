<!-- search bar -->
    <div class="container search-bar">
      <div class="search-bar-outer">
        <div class="search-bar-inner">
          <form action="/search">
            <h4 class="mb-2">尋找餐廳：</h4>
                  <div class="input-group">
                  <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
                  <div class="input-group-append">
                    <button class="btn btn-major" type="submit" id="search-button"><i class="bi bi-search"></i></button>
                  </div>
                </div>
                <a class="btn btn-light border border-secondary mt-2 b-1" href="/restaurant/new/newcontent" role="button">新增餐廳名單</a>
          </form>
        </div>
      </div>
    </div>

    <!-- restaurant list -->
    <div class="container mt-5">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row">
                {{#each restaurants}}              
                        <div class="card mb-3 col-4">
                          <a href="/restaurant/{{this._id}}" class="text-secondary">
                          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                          </a>
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>
                            <div class="restaurant-category mb-1">
                            <i class="bi bi-shop pr-2"></i>{{this.category}}
                            </div>

                            <span class="badge badge-pill bg-danger font-weight-normal">
                            {{this.rating}}
                            <i class="bi bi-star-fill"></i>
                            </span>

                            <div class="d-flex flex-row-reverse">
                            <a type="button" class="btn btn-outline-dark" href="/restaurant/{{this._id}}/edit" role="button">Edit</a>
                            <a type="button" class="btn btn-outline-dark" href="/restaurant/{{this._id}}" role="button">Detail</a>
                            <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST">
                              <button type="submit" class="btn btn-outline-dark">Delete</button>
                            </form>
                            </div>
                            
                        </div>
                        </div>
                   
                {{/each}}
            </div>
        </div>
    </div>