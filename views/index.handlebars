<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer" style="margin:auto; width:350px;display:inline-block;">
    <h5>搜尋餐廳</h5>
    <div class="search-bar-inner" style="width:300px ; display:inline;">
      <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
          <input type="text"
                 name="keywords"
                 class="form-control"
                 placeholder="輸入餐廳、分類"
                 aria-label="Restaurant Name..."
                 aria-describedby="search-button"
                 value="{{keywords}}" />
            <div class="input-group-append">
              <button class="btn btn-major"
                    type="submit"
                    id="search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="search-bar-outer" style="margin:auto;width:350px;display:inline-block; float:right">
    <h5>排序類別</h5>
    <div class="search-bar-inner" style="width:300px;">
      <div class="d-flex flex-column flex-sm-row align-items-sm-center">
        <div class="d-flex input-group">
          <select class="form-control" id="sort" name="sort">
            <option>A > Z</option>
            <option>Z > A</option>
            <option>類別</option>
            <option>地區</option>
          </select>
        </div>
      </div>
    </div>
</div>
<!-- restaurant list -->
<div class="container mt-5 px-md-5">
  <div class="row">
    {{#each restaurantsData}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this.id}}"
        class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top"
            src="{{this.image}}"
            alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button
                  class="btn btn-link btn-sm"
                >Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button
                  class="btn btn-link btn-sm"
                >Details</button></a>
              <form
                action="/restaurants/{{this._id}}?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  class="btn btn-danger btn-sm text-white"
                >delete</button>
              </form>
     </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>